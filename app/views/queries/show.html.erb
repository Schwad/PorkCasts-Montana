<div class = "row" >
<h1>Payments to <%= @query.content %></h1>
</div>

<div class = "row">
  <table class="table table-striped table-bordered">
    <thead>
      <th>#</th>
      <th>Amount</th>
      <th>Date Paid</th>
      <th>Department</th>
      <th>Payment Category</th>
      <th>Check or Card</th>
    </thead>
    <tbody>
      <% i = 1 %>
      <% @checks.each do |check| %>
        <tr>
          <td><%= i %></td>
          <td><%= check.amount %></td>
          <td><%= check.payment_date %></td>
          <td><%= check.department %></td>
          <td><%= check.payment_category %></td>
          <td>Check</td>
          <% i += 1 %>
        </tr>
      <% end %>

      <% @credit_cards.each do |card| %>
        <tr>
          <td><%= i %></td>
          <td><%= card.amount %></td>
          <td><%= card.billing_date %></td>
          <td><%= card.department %></td>
          <td>N/A</td>
          <td>Credit Card</td>
          <% i += 1 %>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>