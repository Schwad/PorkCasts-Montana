<div class = "row" >
<h1>Queries</h1>
</div>

<div class = "row">
  <table class="table table-striped table-bordered">
    <thead>
      <th>#</th>
      <th>Payee</th>
      <th>Date Queried</th>
      <th>Remove</th>
    </thead>
    <tbody>
      <% i = 1 %>
      <% @queries.each do |query| %>
        <td><%= i %></td>
        <td><%= link_to query.content, query_path(query.id) %></td>
        <td><%= query.created_at %></td>
        <td><%= link_to "delete query", query_path(query.id), :method => :delete %>
        <% i += 1 %>
      <% end %>
    </tbody>

  </table>

</div>