<div class = "row" >
<h1>Queries</h1>
</div>

<div class = "row">
  <div class = "col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <th>#</th>
        <th>Payee</th>
        <th>Date Queried</th>
        <th>Remove</th>
        <th>Edit</th>
      </thead>
      <tbody>
        <% i = 1 %>
        <% @queries.each do |query| %>
          <tr>
            <td><%= i %></td>
            <td><%= link_to query.content, user_query_path(@user.id, query.id) %></td>
            <td><%= query.created_at.strftime("%m/%d/%Y") %></td>
            <td><%= link_to "delete query", user_query_path(@user.id, query.id), :method => :delete %></td>
            <td><%= link_to "edit query", edit_user_query_path(@user.id, query.id) %></td>
            <% i += 1 %>
          <% end %>
        </tr>
      </tbody>

    </table>
  </div>

</div>